root = true

[*]
charset = utf-8
end_of_line = lf //换行符
insert_final_newline = true // 文件结尾插入新行

[*.{html}] // html文件
indent_style = space // 缩进风格
indent_size = 2 // 缩进空格数

[*.{js}] // 针对js文件
indent_style = space
indent_size = 2

[*.{yml}]
indent_style = space
indent_size = 2

[*.{md}]
indent_style = space
indent_size = 4
